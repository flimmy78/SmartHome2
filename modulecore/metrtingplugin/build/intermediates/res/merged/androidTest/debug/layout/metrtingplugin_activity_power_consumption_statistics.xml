<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:RangeSeekBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/metrting_plugin_bg_color2"
    android:orientation="vertical">

    <include layout="@layout/title_bar_transparent_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/navigation_bar_parting_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/rgp_power_elect_statistics"
            android:layout_width="231dp"
            android:layout_height="24dp"
            android:layout_marginTop="23dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rgp_power_elect_statistics_bg"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdo_week"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/rdo_week_selector"
                android:textSize="15sp"
                android:textColor="@color/rdo_power_elect_statistics_selector"
                android:text="@string/txt_week"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rdo_month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/rdo_month_selector"
                android:textSize="15sp"
                android:textColor="@color/rdo_power_elect_statistics_selector"
                android:text="@string/txt_month"/>

            <RadioButton
                android:id="@+id/rdo_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/rdo_year_selector"
                android:textSize="15sp"
                android:textColor="@color/rdo_power_elect_statistics_selector"
                android:text="@string/txt_year"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/ll_power_elect_statistics"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="125dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_today_power_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/elect_statistics_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_today_power_elect_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28.8sp"
                        android:textColor="@color/white"
                        android:text="30"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:textSize="11.5sp"
                        android:textColor="@color/prompt_text_color"
                        android:text="KWh"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp"
                    android:textSize="15sp"
                    android:textColor="@color/prompt_text_color"
                    android:text="@string/txt_today_power_elect_statistics"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_week_power_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/elect_statistics_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_week_power_elect_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28.8sp"
                        android:textColor="@color/white"
                        android:text="210"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:textSize="11.5sp"
                        android:textColor="@color/prompt_text_color"
                        android:text="KWh"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp"
                    android:textSize="15sp"
                    android:textColor="@color/prompt_text_color"
                    android:text="@string/txt_week_power_elect_statistics"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_month_power_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/elect_statistics_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_month_power_elect_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28.8sp"
                        android:textColor="@color/white"
                        android:text="900"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:textSize="11.5sp"
                        android:textColor="@color/prompt_text_color"
                        android:text="KWh"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp"
                    android:textSize="15sp"
                    android:textColor="@color/prompt_text_color"
                    android:text="@string/txt_month_power_elect_statistics"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_year_power_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/elect_statistics_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_year_power_elect_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28.8sp"
                        android:textColor="@color/white"
                        android:text="5000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:textSize="11.5sp"
                        android:textColor="@color/prompt_text_color"
                        android:text="KWh"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp"
                    android:textSize="15sp"
                    android:textColor="@color/prompt_text_color"
                    android:text="@string/txt_year_power_elect_statistics"/>

            </RelativeLayout>

        </LinearLayout>

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/chart_power_elect_statistics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rgp_power_elect_statistics"
            android:layout_above="@+id/ll_power_elect_statistics"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

</LinearLayout>
