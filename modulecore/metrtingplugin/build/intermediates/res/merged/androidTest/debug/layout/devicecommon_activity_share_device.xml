<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:FButton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/class_A_10_trans">
    <include
        android:id="@+id/share_device_head"
        layout="@layout/title_bar_black" />
    <ImageView
        android:id="@+id/img_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_right_gw"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txt_shared_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="@string/txt_share_device"/>
    <com.heiman.widget.edittext.ClearEditText
        android:id="@+id/edit_invited_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:maxLines="1"
        android:minLines="1"
        android:background="@drawable/common_input_bg"
        android:hint="@string/input_invited_user_hit"/>
    <com.heiman.widget.button.FButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/btn_submit"
        android:textColor="@color/white"

        FButton:buttonColor="@color/btn_regist_color"
        FButton:cornerRadiusl="30dp"
        FButton:shadowEnabled="false"/>
</LinearLayout>
