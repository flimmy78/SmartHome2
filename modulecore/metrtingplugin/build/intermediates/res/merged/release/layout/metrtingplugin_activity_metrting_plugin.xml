<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:RangeSeekBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/metrting_plugin_bg_color2"
    android:orientation="vertical">

    <include layout="@layout/title_bar_transparent_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/navigation_bar_parting_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_current_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="117dp"
            android:textSize="12.5sp"
            android:textColor="@color/white"
            android:text="@string/txt_current_power"/>
        <TextView
            android:id="@+id/txt_current_power_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/txt_current_power"
            android:textSize="34.6sp"
            android:textColor="@color/metrting_plugin_power_info_color"
            android:text="20"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_current_power_info"
            android:layout_toRightOf="@+id/txt_current_power_info"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12.5sp"
            android:textColor="@color/white"
            android:text="W"
             />

        <ImageButton
            android:id="@+id/img_btn_metrting_plugin_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_ring"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="119dp"
            android:src="@drawable/img_power"/>

        <TextView
            android:id="@+id/txt_metrting_plugin_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_btn_metrting_plugin_on_off"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/txt_metrting_plugin_state1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_below="@+id/txt_metrting_plugin_state"
            android:layout_marginTop="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_metrting_plugin_power_onoff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/txt_metrting_plugin_onoff"
                android:drawableTop="@drawable/icon_power"/>

            <TextView
                android:id="@+id/txt_metrting_plugin_timing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/txt_metrting_plugin_timing"
                android:drawableTop="@drawable/icon_timing"/>

            <TextView
                android:id="@+id/txt_metrting_plugin_countdown_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/txt_metrting_plugin_countdown_time"
                android:drawableTop="@drawable/icon_countdown_time"/>

            <TextView
                android:id="@+id/txt_metrting_plugin_elect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/txt_metrting_plugin_elect"
                android:drawableTop="@drawable/icon_elect"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
