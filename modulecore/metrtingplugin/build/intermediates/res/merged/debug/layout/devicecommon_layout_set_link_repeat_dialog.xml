<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exit_account_dialog_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_one_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/txt_color"
        android:textSize="15sp"
        android:text="@string/one_time"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/navigation_bar_parting_line_color"/>
    <TextView
        android:id="@+id/txt_everyday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/txt_color"
        android:textSize="15sp"
        android:text="@string/everyday"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/navigation_bar_parting_line_color"/>
    <TextView
        android:id="@+id/txt_monday_to_friday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/txt_color"
        android:textSize="15sp"
        android:text="@string/monday_to_friday"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/navigation_bar_parting_line_color"/>
    <TextView
        android:id="@+id/txt_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/txt_color"
        android:textSize="15sp"
        android:text="@string/custom"/>
</LinearLayout>
