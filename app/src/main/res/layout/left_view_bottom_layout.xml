<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_room_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image_room_temp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:src="@drawable/main_right_home_temp" />

        <TextView
            android:id="@+id/tv_room_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="20°"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/ll_outdoor_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image_outdoor_temp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:src="@drawable/main_right_out_temp" />

        <TextView
            android:id="@+id/tv_outdoor_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="20°"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>