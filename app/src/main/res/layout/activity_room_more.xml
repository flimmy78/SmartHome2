<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_transparent_white" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@drawable/divider_recycler" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/My_room"
            android:textColor="@color/class_text_1"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/Edat"
            android:textColor="@color/class_text_24" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@drawable/divider_recycler" />

    <cn.iwgang.familiarrecyclerview.FamiliarRecyclerView
        android:id="@+id/recycler_device"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:frv_divider="@drawable/divider_recycler"
        app:frv_dividerHeight="1px"
        app:frv_layoutManager="linear"
        app:frv_layoutManagerOrientation="vertical" />


</LinearLayout>