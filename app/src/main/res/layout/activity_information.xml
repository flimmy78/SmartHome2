<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/page_background_color">
        <ImageView
            android:id="@+id/img_tittle_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/std_titlebar_margin_left_right"
            android:paddingRight="@dimen/std_titlebar_margin_left_right"
            android:scaleType="center"
            android:src="@drawable/std_tittlebar_main_device_back" />
        <RadioGroup
            android:id="@+id/rgp_information_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <RadioButton
                android:id="@+id/rbtn_common_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:button="@null"
                android:textColor="@color/information_font_selector"
                android:background="@drawable/rbtn_information_selector"
                android:text="@string/common_information"
                android:checked="true" />
            <RadioButton
                android:id="@+id/rbtn_alarm_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:button="@null"
                android:textColor="@color/information_font_selector"
                android:background="@drawable/rbtn_information_selector"
                android:text="@string/alarm_information"/>
        </RadioGroup>
        <TextView
            android:id="@+id/txt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/fbutton_color_nephritis"
            android:text="@string/txt_save"
            android:clickable="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navigation_bar_parting_line_color"/>
    <ListView
        android:id="@+id/list_informations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/navigation_bar_parting_line_color"
        android:dividerHeight="1dp"
        android:layout_marginLeft="10dp">

    </ListView>
</LinearLayout>
