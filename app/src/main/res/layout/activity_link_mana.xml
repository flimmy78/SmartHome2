<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/navigation_bar_parting_line_color"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/class_A_10_trans">
            <TextView
                android:id="@+id/txt_link_condition1"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:drawableRight="@mipmap/home_add"
                android:gravity="center_vertical"
                android:text="@string/link_condition1"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_icon_conlist_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_ds" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_icon_conlist_condition"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_conlist_condition_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/device_name_door"
                        android:textColor="@color/txt_hint_color"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/txt_conlist_condition_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="@string/txt_open"
                        android:textColor="@color/txt_hint_color2"
                        android:textSize="11.5sp" />

                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/txt_link_condition2"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:drawableRight="@mipmap/home_add"
                android:gravity="center_vertical"
                android:text="@string/link_condition2"
                />
            <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                android:id="@+id/recycler_link_condition2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>
            <TextView
                android:id="@+id/txt_link_condition3"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:drawableRight="@mipmap/home_add"
                android:gravity="center_vertical"
                android:text="@string/link_condition3"
                />
            <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                android:id="@+id/recycler_link_condition3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>

            <TextView
                android:id="@+id/txt_risk_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:textSize="11.5sp"
                android:textColor="@color/link_risk_warning_font_color"
                android:text="@string/link_risk_warning"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
